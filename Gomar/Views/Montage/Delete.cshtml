@model Gomar.Models.Montage

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Usunięcie</h1>

<h3>Czy jesteś pewny, że chcesz usunąć ten element?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <a>Nazwa</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
</dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> 
        <button type="button" class="btn btn-outline-primary btn-sm px-3 py-2" onclick="location.href='@Url.Action("Index", "Montage")'">
            Powrót do listy
        </button>
    </form>
</div>

<br/>
<tr>
    <td>
        <p><img style='width:390px; height:300px;' src="@Url.Content(@Url.Content(String.Format("{0}/img/{1}", AppSettings.ApplicationUrl, Model.ImageName)))"></p>
    </td>
</tr>