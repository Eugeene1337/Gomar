@model IEnumerable<Gomar.Models.Montage>

@{
    Layout = null; 
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/img/logo.png" type="image/x-icon" />
    <title>GOMAR - okna, drzwi, bramy, rolety</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" />
    <!-- MDB -->
    <link rel="stylesheet" href="~/css/mdb.min.css" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-top">
            <div class="container">
                <a class="brand navbar-brand ms-5" style="font-size: 22px;" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" height="55" alt="Gomar" />
                </a>
                <!-- Toggle button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="navbar-collapse collapse justify-content-between " style="font-size: 18px;">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Windows">Okna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Doors">Drzwi</a>
                        </li>        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Gates">Bramy</a>
                        </li>        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Blinds">Rolety</a>
                        </li>        
                        <li class="nav-item">
                            <a class="nav-link" href="#about-us">O nas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#our-projects">Nasze realizacje</a>
                        </li>
                        <li>
                            <a class="nav-link" href="tel:577399488"><i class="fas fa-phone-alt"></i> 577 399 488</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark"><i class="fas fa-envelope"></i> biuro@oknagomar.pl</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!--Mask-->
        <div id="intro" class="view">
            <div class="mask" style="background-color: rgba(0, 0, 0, 0.1)">
                <div class="container-fluid d-flex align-items-center justify-content-center h-100">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-md-12">

                            <!-- Heading -->
                            <h2 class="display-5 font-weight-bold text-white pt-5 mb-2">Okna Drzwi Bramy Rolety</h2>
                            <!-- Divider -->
                            <div class="my-3" style="width: 550px; height: 3px; background: white; margin: 0 auto;"></div>
                            <!-- Description -->

                            <button type="button" class="btn btn-outline-white "><a class="nav-link text-white" href="tel:577399488">Poproś o wycenę</a></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/.Mask-->

    </header>

    <!--Main layout-->
    <main class="my-5">
        <!--We work with section-->
        <div class="container ">
            <section id="we-work-with" class="text-center my-5">


                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                        <div class="view overlay z-depth-1-half">
                            <img src="img/aluprof.jpg" class="img-fluid" alt="">
                            <a>
                                <div class="rgba-blue-light"></div>
                            </a>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                        <div class="view overlay z-depth-1-half">
                            <img src="img/veka.png" class="img-fluid " alt="">
                            <a>
                                <div class="rgba-blue-light"></div>
                            </a>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                        <div class="view overlay z-depth-1-half">
                            <img src="img/gealan.jpg" class="img-fluid " alt="">
                            <a>
                                <div class="rgba-blue-light"></div>
                            </a>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                        <div class="view overlay z-depth-1-half">
                            <img src="img/portos.png" class="img-fluid" alt="">
                            <a>
                                <div class="rgba-blue-light"></div>
                            </a>
                        </div>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
            </section>

        </div>
        <!--We work with section-->
        <a class="anchor" id="about-us"></a>
        <!--About us-->
        <div class="about-us container-fluid mb-5 " style="background-color: rgba(0, 0, 0, 0.9)">
            <div class="container ">
                <div class="row mb-4 ">
                    <!--Grid column-->
                    <div class="col-lg-4 col-md-12 mb-4 ">
                        <div class="view overlay z-depth-1-half ms-5">
                            <img src="img/window-cut.png" class="img-fluid " alt="">
                        </div>
                    </div>
                    <!--Grid column-->
                    <div class="col-lg-8">
                        <h2 class="text-white">O nas</h2>
                        <div class=" mb-4" style="width: 90px; height: 3px; background: #C52831; margin: 0 ;"></div>
                        <p class="description text-white">
                            @ViewData["Text"]
                        </p>
                    </div>
                </div>


            </div>


        </div>
        <!--About us-->
        <div class="container">

            <a class="anchor" id="our-projects"></a>
            <!--Section: Our-Projects-->
            <section class="text-center">

                <div class="row mb-4">
                    <h2>Nasze realizacje</h2>
                    <div style="width: 90px; height: 3px; background: #C52831; margin: 0 auto;"></div>
                </div>
                @for (int i = 0; i < Model.Count(); i += 3)
                {
                <div class="row">
                @{
                    int j = 0;
                    for (; j <= 2 && i + j < Model.Count(); j++)
                    {



                        <!--Grid column-->
                        <div class="col-lg-4 col-md-12 mb-4">
                            <div class="view overlay z-depth-1-half">
                                <img src="@Model.ElementAt(i+j).ImageSrc" class="img-fluid hover-shadow" alt="">
                                <a>
                                    <div class="rgba-blue-light"></div>
                                </a>
                            </div>
                        </div>
                        <!--Grid column-->
                        }
                    }
                    </div>
                 }
                </section>
            <!--Section: Our-Projects-->

        </div>

    </main>
    <!--Footer-->
    <footer class="bg-dark text-center text-white footer">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section>
                <div class="row">
                    <div class="col-lg-3 col-sm-12 mb-4">
                        <!-- Facebook -->
                        <a class="btn btn-outline-light btn-floating mx-5" href="https://www.facebook.com/oknagomar/" role="button">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-12 mb-4">
                        <a class="text-white mx-5"><i class="fas fa-phone-alt"></i> 577 399 488</a>
                    </div>
                    <div class="col-lg-3 col-sm-12 mb-4">
                        <a class="text-white mx-5"><i class="fas fa-envelope"></i> biuro@oknagomar.pl</a>
                       </div>
                        <div class="col-lg-3 col-sm-12 mb-4">
                            <a class="text-white mx-5"><i class="fas fa-map-marker-alt"></i> Wrocław</a>
                        </div>
                    </div>
</section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2021 Copyright:
            <a class="text-white" href="https://mdbootstrap.com/">OknaGomar.pl</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!--Footer-->
    <!-- MDB -->
    <script src="~/js/mdb.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>