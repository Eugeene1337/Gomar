@model LogInViewModel

<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
          <div class="px-5 ms-xl-4">
          <i class="fas  fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          <span class="h1 fw-bold mb-5"></span>
        </div>
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form style="width: 23rem; mt-5" asp-action="LogIn" method="post">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h3 class="h1 fw-bold mt-5 mb-2 ">Logowanie</h3>
                                                                            
            <div class="form-outline">
              <input asp-for="Email" type="email" id="form2Example18" class="form-control form-control-lg" />
              <label asp-for="Email" class="form-label" for="form2Example18">Email</label>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>

            <div class="form-outline mt-4">
              <input asp-for="Password" type="password" id="form2Example28" class="form-control form-control-lg" />
              <label asp-for="Password" class="form-label" for="form2Example28">Hasło</label>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            <div class="pt-1 mt-4 mb-4">
              <input type="submit" value="Zaloguj się" class="btn btn-info btn-lg btn-block" />
            </div>


          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>

    </div>
  </div>
</section>